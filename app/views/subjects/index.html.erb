<div class="form-wrapper">
  <form action="<%= subjects_path %>" method="get">
    <%= text_field_tag :q, params[:q], placeholder: "Поиск по направлениям"  %>
    <%= submit_tag "Поиск", :name => nil %>
  </form>
</div>
<h1>Все направления</h1>
<% @subjects.each do |subject| %>
  <div class="card" style="width: 24.5rem;">
    <div class="card-body">
      <p class="card-text"><%= link_to subject.name,subject_path(subject)%></p>
      <p class="card-text"><%= subject.description%></p>
    </div>
  </div>
<% end %>
<div class="pagination justify-content-center">
  <%= will_paginate @subjects,renderer:  WillPaginate::ActionView::BootstrapLinkRenderer,previous_label: '<',next_label: '>',inner_window: 1,outer_window:0%>
</div>